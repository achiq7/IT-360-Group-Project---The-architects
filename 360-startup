import os.path;
import cvs;
from datetime import datetime;
import re;
"""
class for parsing through data
"""

class dataParser{
    # reading textfile to list
    def readFile(filename){
         data =[] #create list named data
        #opens textfile into foFile 
         with open(filename, 'r') as foFile{ 
        
            for line in foFile.readlines(){#for loop read foFile line into line
                 data.append(line.strip("\n"))#appends to data variable each time from line variable
             }
            return data #return what data list        
        }
    }
    
    def findDate(logFile){#list of the read file contents
        fullDate = []
        #for loop to check dates data
        for date in logFile{
            fullDate=logFile[:14]#put everything from 14 and smaller in to a list
        return fullDate
        }
    }
    #organize based on date, use list 
    def organizeByDate(logFile){
        organizedLogs = []#create dictionary to hold all data
        #for loop through given data using new variable
        for entry in logFile{
            breakUp = entry.split(maxsplit=3) #split entry into 3 parts
            #if length of breakUp is greater than or equal to 4
            if len(breakUp) >= 4{
            month = breakUp[0]#month is first portion
            day = breakUp[1]#day is second portion
            time = breakUp[2]#time is third section
            otherData = breakUp[3]#following data is forth section

            dateString = month + " " + day + " " + time #create string to hold entirety of date
            officialD = datetime.strptime(dateString, "%b %d %H:%M:%S")#formatting for complete date using the previous variable

            organizedLogs.append({#adding date to dictionary
                'datetime': officialD,
                'date': officialD.date(),
                'time': officialD.time(),
                'month': month,
                'day': day,
                'timestamp': time,
                'otherData': otherData.

            })
            organizedLogs.sort(key=lambda x: x['datetime'])#sort the dictionary
            return organizedLogs
            }
        }
    }

    #create report with given data list
    def printReport(data){
        #write a textfile
       with open(data, 'w') as report{
        report.write('\n~' * 60)#formatting
        report.write('Logs Organized by Date\n')#title
        report.write('~' * 60 +'\n')#formatting
        #for loop goes through organized by date data
        for i in organizedByDate(data){
            report.write(organizedByDate(data[i]))#writes it line by line to the new texfile
        }
       }
        
    }




}



